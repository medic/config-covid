      <instance>
        <declaration delimiter="#" id="declaration" prefix="J1!declaration!" version="2020-03-19 00:45:16">
          <inputs>
            <meta>
              <location>
                <lat/>
                <long/>
                <error/>
                <message/>
              </location>
            </meta>
            <source>user</source>
            <source_id/>
            <contact>
              <_id/>
              <name/>
              <patient_id/>
            </contact>
          </inputs>
          <patient_uuid/>
          <patient_id/>
          <patient_name/>
          <r_high_risk/>
          <journey>
            <flight_number/>
            <journey_history jr:template="">
              <from/>
              <to/>
            </journey_history>
          </journey>
          <contact_info>
            <ari/>
            <care/>
            <dead/>
            <admit/>
            <r_contact_risk/>
          </contact_info>
          <health>
            <fever/>
            <respi/>
            <fever_history/>
            <headache/>
            <vomiting/>
            <diarrhoea/>
            <fatigue/>
            <bruising/>
            <bleeding/>
            <notes/>
            <r_health_risk/>
          </health>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </declaration>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/declaration/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/declaration/inputs/source" type="string"/>
      <bind nodeset="/declaration/inputs/source_id" type="string"/>
      <bind nodeset="/declaration/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/declaration/inputs/contact/name" type="string"/>
      <bind nodeset="/declaration/inputs/contact/patient_id" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/declaration/patient_uuid" type="string"/>
      <bind calculate="../inputs/contact/patient_id" nodeset="/declaration/patient_id" type="string"/>
      <bind calculate="../inputs/contact/name" nodeset="/declaration/patient_name" type="string"/>
      <bind calculate="if(../contact_info/r_contact_risk = 'true' or ../health/r_health_risk = 'true', 'true', 'false')" nodeset="/declaration/r_high_risk" type="string"/>
      <bind nodeset="/declaration/journey/flight_number" type="string"/>
      <bind nodeset="/declaration/journey/journey_history/from" type="string"/>
      <bind nodeset="/declaration/journey/journey_history/to" type="string"/>
      <bind nodeset="/declaration/contact_info/ari" type="select1"/>
      <bind nodeset="/declaration/contact_info/care" type="select1"/>
      <bind nodeset="/declaration/contact_info/dead" type="select1"/>
      <bind nodeset="/declaration/contact_info/admit" type="select1"/>
      <bind calculate="if(../ari = 'true' or 
../care = 'true' or 
../dead = 'true' or 
../admin = 'true', 'true', 'false')" nodeset="/declaration/contact_info/r_contact_risk" type="string"/>
      <bind nodeset="/declaration/health/fever" type="select1"/>
      <bind nodeset="/declaration/health/respi" type="select1"/>
      <bind nodeset="/declaration/health/fever_history" type="select1"/>
      <bind nodeset="/declaration/health/headache" type="select1"/>
      <bind nodeset="/declaration/health/vomiting" type="select1"/>
      <bind nodeset="/declaration/health/diarrhoea" type="select1"/>
      <bind nodeset="/declaration/health/fatigue" type="select1"/>
      <bind nodeset="/declaration/health/bruising" type="select1"/>
      <bind nodeset="/declaration/health/bleeding" type="select1"/>
      <bind nodeset="/declaration/health/notes" type="string"/>
      <bind calculate="if(../fever = 'true' or 
../respi = 'true' or 
../fever_history = 'true' or 
../headache= 'true' or 
../vomiting = 'true' or 
../diarrhoea = 'true' or 
../fatigue = 'true' or 
../bruising = 'true' or 
../bleeding = 'true', 'true', 'false')" nodeset="/declaration/health/r_health_risk" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/declaration/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
